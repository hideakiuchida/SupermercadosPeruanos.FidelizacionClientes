<!-- Modal -->
<div class="modal fade" id="modal-editar" role="dialog">
    <div class="modal-dialog-clientes">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Editar Producto Canje</h4>
            </div>
            <div class="modal-body">
                <form id="seccion-datos-producto-editar" class="well">
                    <h5 class="subtitulos">Datos del Producto Canje</h5>
                    <div class="form-horizontal col-md-6">
                        <div class="form-group">
                            <label class="control-label col-md-4" for="txt-codigo-editar">Código:</label>
                            <div class="col-md-8">
                                <input type="text" class="form-control" id="txt-codigo-editar" readonly>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-4" for="txt-nombre-editar">Nombre:</label>
                            <div class="col-md-8">
                                <input type="text" class="form-control" id="txt-nombre-editar" required>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-4" for="txt-valor-canje-editar">Valor Canje:</label>
                            <div class="col-md-8">
                                <input type="number" class="form-control" id="txt-valor-canje-editar" required>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-4" for="select-tipo-editar">Tipo:</label>
                            <div class="col-md-8">
                                <select id="select-tipo-editar" class="form-control col-md-8" required>
                                    <option value="">- Seleccionar -</option>
                                    <option value="0">Producto</option>
                                    <option value="1">Servicio</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-4" for="select-categoria-editar">Categoría:</label>
                            <div class="col-md-8">
                                <select id="select-categoria-editar" class="form-control col-md-8" required>
                                    <option value="">- Seleccionar -</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-4" for="txt-stock-editar">Stock:</label>
                            <div class="col-md-8">
                                <input type="number" class="form-control" id="txt-stock-editar" required>
                            </div>
                        </div>
                    </div>
                    <div class="form-horizontal col-md-6">
                        <div class="form-group">
                            <label class="control-label col-md-4" for="txt-descripcion-editar">Descripción:</label>
                            <div class="col-md-8">
                                <input type="text" class="form-control" id="txt-descripcion-editar" required>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-4" for="txt-condiciones-editar">Condiciones:</label>
                            <div class="col-md-8">
                                <input type="text" class="form-control" id="txt-condiciones-editar" required>
                            </div>
                        </div>
                    </div>
                    <button id="btn-editar" type="submit" class="btn btn-default col-md-12" form="seccion-datos-producto-editar">
                        Editar Producto Canje
                    </button>
                </form>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
            </div>
        </div>

    </div>
</div>