@{
    ViewBag.Title = "Catalogo de Producto Vea Club";
}

@Styles.Render("https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css")
@Scripts.Render("https://code.jquery.com/ui/1.12.1/jquery-ui.js")

<div id="seccion-general" class="container-fluid">
    <div class="row content">

        <section id="seccion-filtrar" class="col-md-2">
            <h5 class="subtitulos"><span class="glyphicon glyphicon-filter"></span> Filtros </h5>
            @Html.Partial("~/Views/Catalogo/FiltroTemplate.cshtml")
        </section>
        <section class="col-md-10 ">
            <div id="tabs">
                <ul>
                    <li><a href="#tabs-1">Ofertas Personalizadas</a></li>
                    <li><a href="#tabs-2">Catalogo de Productos</a></li>
                </ul>
                <div id="tabs-1">
                    @Html.Partial("~/Views/Catalogo/OfertasPersonalizadas.cshtml")
                </div>
                <div id="tabs-2">
                    @Html.Partial("~/Views/Catalogo/CatalogoProductos.cshtml")                   
                </div>
            </div>
        </section>
    </div>
</div>

@Html.Partial("~/Views/Catalogo/ProductoModal.cshtml")     

@Scripts.Render("~/Scripts/Catalogo/CatalogoModule.js")
<script>
    $(document).ready(function () {

        var catalogoModule = new CatalogoModule(
            {
               // urlBuscarAfiliacionCliente: '@Url.Action("BuscarAfiliacionCliente", "Afiliacion")'
            }
        );

        catalogoModule.initialize();
    });

</script>

